---

import { formatDate } from '../../backend/utilises';
import ImgPB from "./ImgPB.astro";
const { ...activite } = Astro.props;
---

<article>
  <div class="">
  <a href={`/activite/${activite.id}`}><ImgPB 
    record={activite} 
    field="affiche" 
    alt={activite.imgAlt} 
    classPicture="" 
    classImg=""
  /></a>
    
    <div
      class="relative px-6  space-y-4"
    >
      <h3 class="text-2xl font-semibold py-4">
        <a class="text-black" href={`/activite/${activite.id}`}>{activite.Nom_activite}</a>
      </h3>
      <p class="text-gray-500 flex items-center">
        <span class="text-2xl font-bold ">{formatDate(activite.date)}</span
          >
      </p>
    </div>
  </div>
  </article>